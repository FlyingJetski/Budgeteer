<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Budgeteer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">20dp</item>
    </style>

    <style name="Add.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:colorButtonNormal">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">20dp</item>
    </style>

    <style name="Edit.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple</item>
        <item name="android:colorButtonNormal">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">20dp</item>
    </style>

    <style name="Delete.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">20dp</item>
    </style>
</resources>